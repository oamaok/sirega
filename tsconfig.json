{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node"
  }
}